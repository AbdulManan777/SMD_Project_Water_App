<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drwr"
    tools:context=".Activity3"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profielpicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_profile_icon"
                android:layout_alignParentRight="true"

                android:layout_marginRight="10sp"
                />



    <ImageView
        android:id="@+id/persondrinkingwater"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/waterdrinking" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water---good pure good life"
        android:textColor="@color/black"
        android:layout_below="@+id/persondrinkingwater"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"/>






    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"/>






</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include
            layout="@layout/profile"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>